<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>


    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        tools:context=".ui.transform.PicTransformActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar_take_photo"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_name_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="@dimen/dp_15"
                    android:text="@string/text_title_take_photo"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_17" />

                <ImageView
                    android:id="@+id/btn_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginStart="@dimen/dp_15"
                    android:src="@drawable/ic_home_to" />

            </com.google.android.material.appbar.MaterialToolbar>

            <ImageView
                android:id="@+id/iv_camera_pic"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="@dimen/dp_22"
                android:layout_marginBottom="@dimen/dp_20"
                android:layout_height="wrap_content"
                />

            <EditText
                android:id="@+id/tv_trans"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_light_theme_bg"
                android:textIsSelectable="true"
                android:textSize="@dimen/sp_15"
                android:gravity="start|top"
                android:padding="@dimen/dp_20"
                android:layout_margin="@dimen/dp_20"
                android:visibility="gone"/>


        </LinearLayout>
    </ScrollView>
</layout>