<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_round_bottom_dialog"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_suggest_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_suggest_title"
        android:textStyle="bold"
        android:textSize="@dimen/sp_18"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="@dimen/dp_15"/>

    <ImageView
        android:id="@+id/iv_chacha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_close_chacha"
        android:tint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="@dimen/dp_15"/>

    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/fl_suggest_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_suggest_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:flexDirection="row"
        app:justifyContent="center"
        app:flexWrap="wrap">


        <TextView
            android:id="@+id/tv_meaning_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="释义有误"
            android:textSize="@dimen/sp_13"
            android:textColor="@color/black"
            android:background="@drawable/shape_round_suggest_item"
            android:paddingHorizontal="@dimen/dp_30"
            android:paddingVertical="@dimen/dp_8"
            android:layout_marginHorizontal="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_20"
            />

        <TextView
            android:id="@+id/tv_sentence_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="例句有误"
            android:gravity="center"
            android:textSize="@dimen/sp_13"
            android:textColor="@color/black"
            android:background="@drawable/shape_round_suggest_item"
            android:paddingHorizontal="@dimen/dp_30"
            android:paddingVertical="@dimen/dp_8"
            android:layout_marginHorizontal="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_20"
            />

        <TextView
            android:id="@+id/tv_sound_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发音有误"
            android:gravity="center"
            android:textSize="@dimen/sp_13"
            android:textColor="@color/black"
            android:background="@drawable/shape_round_suggest_item"
            android:paddingHorizontal="@dimen/dp_30"
            android:paddingVertical="@dimen/dp_8"
            android:layout_marginHorizontal="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_15"
            />

        <TextView
            android:id="@+id/tv_sentence_quality_problem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="例句质量不佳"
            android:gravity="center"
            android:textSize="@dimen/sp_13"
            android:textColor="@color/black"
            android:background="@drawable/shape_round_suggest_item"
            android:paddingHorizontal="@dimen/dp_30"
            android:paddingVertical="@dimen/dp_8"
            android:layout_marginHorizontal="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_15"
            />

        <TextView
            android:id="@+id/tv_bad_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="存在违规等不良信息"
            android:gravity="center"
            android:textSize="@dimen/sp_13"
            android:textColor="@color/black"
            android:background="@drawable/shape_round_suggest_item"
            android:paddingHorizontal="@dimen/dp_30"
            android:paddingVertical="@dimen/dp_8"
            android:layout_marginHorizontal="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_25"
            />

    </com.google.android.flexbox.FlexboxLayout>
</androidx.constraintlayout.widget.ConstraintLayout>