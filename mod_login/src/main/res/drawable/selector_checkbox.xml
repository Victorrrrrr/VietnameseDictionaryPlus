<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <size android:width="18dp" android:height="18dp" />
                    <stroke android:width="1dp" android:color="@color/vd_dark_theme_color" />
                    <solid android:color="@color/vd_dark_theme_color" />
                </shape>
            </item>
            <item android:drawable="@drawable/ic_tick" />
        </layer-list>
    </item>

    <item>
        <shape android:shape="oval">
            <size android:width="18dp" android:height="18dp" />
            <stroke android:width="1dp" android:color="@color/text_light_grey" />
            <solid android:color="#FFFFFF" />
        </shape>
    </item>


</selector>